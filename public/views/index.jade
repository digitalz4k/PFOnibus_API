extends layout

block content
    div(class='off-canvas-wrap', data-offcanvas)
        div.inner-wrap
            nav.tab-bar
                section.left-small
                    a.left-off-canvas-toggle.menu-icon(href="#")
                        span
                section.middle.tab-bar-section
                    h1.title.animated.shake SDK AngularJS

            aside.left-off-canvas-menu
                h2.text-center Menu
                ul.off-canvas-list
                    li
                        a(href="#item1") Item 1
                    li
                        a(href="#item2") Item 2
                    li
                        a(href="#item3") Item 3
            div.row
                div.large-12.columns
                div(ng-view)
                p.animated.rotateIn Hello world!
                img(src="http://lorempixel.com/output/fashion-q-c-456-234-7.jpg", alt="Picture")
                a.exit-off-canvas

    // Loading libraries
    script(src='libs/angular/angular.js')
    script(src='libs/angular-resource/angular-resource.js')
    script(src='libs/angular-route/angular-route.js')
    script(src='libs/angular-animate/angular-animate.js')
    script(src='libs/dz-assets/js/vendor/jquery.js')
    script(src='libs/dz-assets/js/vendor/fastclick.js')
    script(src="libs/dz-assets/js/foundation.min.js")
    script $(document).foundation();
    // Loading App Scripts
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')